
@{
    ViewData["Title"] = "View";
    Layout = null;
}
@model Device

@{
    EnvironmentPayload ok = Model.EnvironmentPayloads.LastOrDefault();
    IEnumerable<EnvironmentPayload> oke = Model.EnvironmentPayloads.OrderByDescending(a => a.TimestampEvent);
    double Shock = 0;
    int NumberOfShock = oke.Count(a => a.EventType == "3");
    foreach (EnvironmentPayload env in oke)
    {
        if (env.Smax > Shock)
        {
            Shock = env.Smax;
        }
    }
}
<!DOCTYPE html>
<html lang="en">
