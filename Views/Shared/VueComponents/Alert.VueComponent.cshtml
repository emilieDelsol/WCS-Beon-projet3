<script>
    app.component('alert', {
        data: function () {
            return {
                alerts: undefined,
            }
        },
        mounted: function () {
            Axios.get(`/Device/Alert/${this.device_id}`)
                .then((response) => {
                    this.alerts = response.data
                    console.log(response)
                })
        },
        props: { device_id: String },
        template: `
                    <p v-for="item in alerts" :key="item.eventType">
    {{ item.eventType }}
  </p>
`
    })
</script>






