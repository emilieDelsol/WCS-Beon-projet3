<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    <style type="text/css">
        #map { /* la carte DOIT avoir une hauteur sinon elle n'apparaît pas */
            height: 400px;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeOn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/beon.css" />
    <link rel="stylesheet" href="~/css/beonScss.scss" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
</head>
<body>
    <header>

        <h1 class="text-center "><img src="~/beonWhite.jpg"  alt="logo beon"/></h1>
        <div class="border pl-3">
            <h2 class="text-left  ">Tracker 001</h2>
            <p class="text-left  ">@DateTime.Now</p>
        </div>

    </header>


        <main role="main" class="border container-fluid">
            <aside>
                <nav class="d-none d-lg-block">
                    <div class=" d-flex flex-column  float-left border">
                        <ul class="list-group">
                            <li class="list-group-item"> <a asp-controller="Home" asp-action="Index"><i class="fas fa-home "></i> Home</a></li>
                            <li class="list-group-item"><a asp-controller="Home" asp-action="Index"><i class="fas fa-eye "></i> Traker list</a></li>
                            <li class="list-group-item"> <a asp-controller="Home" asp-action="Index"><i class="fas fa-globe-europe "></i> Overview</a></li>
                            <li class="list-group-item"><a asp-controller="Home" asp-action="Index"><i class="fas fa-power-off"></i></a></li>
                        </ul>
                    </div>
                       
                    <div class="btn-group dropleft  h-100 border float-right">
                        <button type="button" class="btn btn-outline-dark " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-bell "></i>
                        </button>
                        <div class="dropdown-menu text-center p-3">
                            <p><i class="fas fa-hammer "></i>Choc!</p>
                            <p><i class="fas fa-temperature-high"></i>100°C</p>
                            <p><i class="fas fa-temperature-low "></i>-10°C</p>
                        </div>
                    </div>

                </nav>
            </aside>
            @RenderBody()
        </main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - BeOn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/65454f298e.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script src="~/js/scriptCarte.js"></script>
    <script src="~/js/scriptChartTemp.js"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>
