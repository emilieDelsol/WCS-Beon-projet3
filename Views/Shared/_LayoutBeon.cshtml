<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    <style type="text/css">
        #map { /* la carte DOIT avoir une hauteur sinon elle n'apparaît pas */
            height: 400px;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeOn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/beon.css" />
    <link rel="stylesheet" href="~/css/beonScss.scss" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
</head>
<body class="bg-light" style="font-family:Rockwell">
    <header class="d-flex "   style="background-color: #201063">
        
                <h1><a class="nav-link" asp-controller="Home" asp-action="Index">Be<i class="fas fa-power-off" style="color:aqua"></i>n</a></h1>
            
    </header>
    <div class="container-fluid">
        <div class="row min-vh-100 flex-column flex-lg-row">
            <aside class=" p-0  flex-shrink-1" style="  background-color: #201063">
                <nav class="navbar navbar-expand navbar-dark flex-lg-column flex-row align-items-start p-3"  >
                    <div class="collapse navbar-collapse row m-auto">

                        <ul class="flex-lg-column flex-row navbar-nav w-100 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link pl-0 text-nowrap" style="color: #33d9ed;" asp-controller="Home" asp-action="Index"><i class="fas fa-home "></i><span class="d-none d-lg-inline"> Home</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" style="color: #33d9ed;" asp-controller="Beon" asp-action="listDevices"><i class="fas fa-eye "></i> <span class="d-none d-lg-inline">Tracker list</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" style="color: #33d9ed;" asp-controller="Home" asp-action="Index"><i class="fas fa-globe-europe "></i><span class="d-none d-lg-inline"> Overview</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" style="color: #33d9ed;" href="#"><i class="fa fa-star fa-fw"></i> <span class="d-none d-lg-inline">Link</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" style="color: #33d9ed;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                                <div class="dropdown-menu" style="        background-color: #201063
">
                                    <a class=" btn btn-outline-info"  asp-controller="Beon" asp-action="testDashboard">Test dashboard</a>
                                    <a class="dropdown-item" style="color: #33d9ed;" asp-controller="Home" asp-action="Index"><i class="fas fa-power-off"></i></a>
                                    <a class="dropdown-item" style="color: #33d9ed;">Something else here</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" style="color: #33d9ed;">Separated link</a>
                                    <a class="dropdown-item" style="color: #33d9ed;">One more separated link</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>

            <main role="main" class="col p-0">
                @RenderBody()
            </main>

        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - BeOn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/65454f298e.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script src="~/js/scriptCarte.js"></script>
    <script src="~/js/scriptChartTemp.js"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>
