<!DOCTYPE html>

<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
  <link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css" />
  <link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css" />
  <style type="text/css">
      #overview {
          height: 75vh;
      }
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - BeOn</title>
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/lib/chartjs/Chart.css" />
  <link rel="stylesheet" href="~/css/beon.css" />
</head>
<body>

  <partial name="NavBar.Partial" />

  <div class="container-fluid">
    <div class="row  flex-column flex-lg-row">
      <aside class=" p-0  flex-shrink-1" style="  background-color: #201063">
        <nav class="navbar navbar-expand navbar-dark flex-lg-column flex-row align-items-start p-0">
          <div class="collapse navbar-collapse row m-auto">

            <ul class="flex-lg-column flex-row navbar-nav justify-content-between ">
              <li class="list-group-item  rounded-0" style="  background-color: #201063;">
                <a class="nav-link pl-0 text-nowrap" style=" font-weight:bold;color:white" asp-controller="Home" asp-action="Index"><img src="~/Icons/home.svg" alt="" /> <span class="d-none d-lg-inline"> Home</span></a>
              </li>
              <li class="list-group-item" style="  background-color: #201063">
                <a class="nav-link pl-0" style=" font-weight:bold; color:white;" asp-controller="Home" asp-action="List"><img src="~/Icons/eye.svg" alt="" /> <span class="d-none d-lg-inline">Tracker list</span></a>
              </li>
              <li class="list-group-item" style="  background-color: #201063">
                <a class="nav-link pl-0" style=" font-weight:bold;color:white " asp-controller="Home" asp-action="Map"><img src="~/Icons/earth.svg" alt="" /><span class="d-none d-lg-inline"> Overview</span></a>
              </li>
              @RenderSection("AdditionalLinks", required: false)
            </ul>
          </div>
        </nav>
      </aside>

      <main role="main" class="col p-0" id="app">
        @RenderBody()
      </main>
    </div>
  </div>

    <partial name="Footer.Partial" />

    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script type='text/javascript' src='https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js'></script>
    <script src="~/lib/chartjs/Chart.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/axios/axios.min.js"></script>

    @if (IsSectionDefined("Vue"))
    {
      <script src="~/lib/vue/vue.js"></script>
      <script>
      const Axios = axios.create({
        baseURL: "@Context.Request.Scheme://@Context.Request.Host.Value/api"
      })
      var vueData = { }
      </script>
      @RenderSection("Vue", required: true)
      <script>
        var app = Vue.createApp(vueData)
      </script>
        @RenderSection("VueComponents", required: false)
      <script>
        app.mount('#app')
      </script>
    }

</body>
</html>