<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    <style type="text/css">
        #map { /* la carte DOIT avoir une hauteur sinon elle n'apparaît pas */
            height: 400px;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeOn</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/chartjs/Chart.css" />
    <link rel="stylesheet" href="~/css/beon.css" />

</head>
<body >
    <header class="d-flex  justify-content-between" style="background-color: #201063">
        <h1 class="m-0 p-0"><a class="" asp-controller="Home" asp-action="Index"><img src="~/logoBeOnWhite.png" alt="" width="200"></a></h1>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-lg " style="color: white;" data-toggle="modal" data-target="#exampleModal">
            <i class="fas fa-power-off"></i> Logout
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            Ready to Leave?
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Select "Logout" below if you are ready to end your current session.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row min-vh-100 flex-column flex-lg-row">
            <aside class=" p-0  flex-shrink-1" style="  background-color: #201063">
                <nav class="navbar navbar-expand navbar-dark flex-lg-column flex-row align-items-start p-0">
                    <div class="collapse navbar-collapse row m-auto">

                        <ul class="flex-lg-column flex-row navbar-nav justify-content-between ">
                            <li class="list-group-item  rounded-0" style="  background-color: #201063;">
                                <a class="nav-link pl-0 text-nowrap" style=" font-weight:bold;color:white" asp-controller="Home" asp-action="Index"><i class="fas fa-home "></i><span class="d-none d-lg-inline"> Home</span></a>
                            </li>
                            <li class="list-group-item" style="  background-color: #201063">
                                <a class="nav-link pl-0" style=" font-weight:bold; color:white;" asp-controller="Beon" asp-action="listDevices"><i class="fas fa-eye "></i> <span class="d-none d-lg-inline">Tracker list</span></a>
                            </li>
                            <li class="list-group-item" style="  background-color: #201063">
                                <a class="nav-link pl-0" style=" font-weight:bold;color:white " asp-controller="Home" asp-action="Index"><i class="fas fa-globe-europe "></i><span class="d-none d-lg-inline"> Overview</span></a>
                            </li>
                            <li class="list-group-item dropdown dropright  d-none d-lg-block" style="  background-color: #201063">
                                <a class="nav-link dropdown-toggle" style="color: white; font-weight:bold;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="far fa-bell"></i> Alert</a>
                                <div class="dropdown-menu" style="background-color: #201063; border:solid  white;">
                                    <a class="dropdown-item" style="color: white; font-weight:bold;" asp-controller="Beon" asp-action="TestDashboard">Tracker 001 <br /><i class="fas fa-temperature-low"></i> Temp: -10°C</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" style="color: white; font-weight:bold;">Tracker 011 <br /><i class="fas fa-temperature-high"></i> Temp: 55°C</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" style="color: white; font-weight:bold;">Tracker 010<br /><i class="fas fa-hammer"></i> Shock: 2G</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" style="color: white; font-weight:bold;">Tracker 003<br /><i class="fas fa-battery-quarter"></i> Low battery</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>

            <main role="main" class="col p-0">
                @RenderBody()
            </main>

        </div>
    </div>
    <footer class="footer text-muted" style="  background-color: #201063">
        <div class="container">
            &copy; 2020 - BeOn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/65454f298e.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script src="~/js/scriptCarte.js"></script>
    <script src="~/lib/chartjs/Chart.min.js" asp-append-version="true"></script>
    <script src="~/js/scriptChartTemp.js"></script>

    <script>
        function sortFunction() {
            let sortButton = document.querySelectorAll("sortButton");
            document.getElementById("sortButton72").classList.toggle("btn-success");
            document.getElementById("sortButton72").classList.toggle("btn-outline-success");
            document.getElementById("sortButton24").classList.toggle("btn-success");
            document.getElementById("sortButton24").classList.toggle("btn-outline-success");
        }
    </script>

    @RenderSection("Scripts", required: false)


</body>
</html>
