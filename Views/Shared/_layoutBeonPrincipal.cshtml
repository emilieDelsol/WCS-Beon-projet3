<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css" />
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css" />
    <style type="text/css">
        #overview {
            height: 75vh;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeOn</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/chartjs/Chart.css" />
    <link rel="stylesheet" href="~/css/beon.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script> <!--import cdn, bug on bootstrap.bundle.min.js-->
</head>
<body>
    <header class="d-flex  justify-content-between" style="background-color: #201063">
        <h1 class="m-0 p-0"><a class="" asp-controller="Home" asp-action="Index"><img src="~/logoBeOnWhite.png" alt="" width="200"></a></h1>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-lg  " style="color: white;" data-toggle="modal" data-target="#exampleModal">
            <span class="d-none d-lg-inline">Logout</span>
            <img src="~/Icons/logout.svg" alt="" />
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            Ready to Leave?
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Select "Logout" to close your current session.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row  flex-column flex-lg-row">
            <aside class=" p-0  flex-shrink-1" style="  background-color: #201063">
                <nav class="navbar navbar-expand navbar-dark flex-lg-column flex-row align-items-start p-0">
                    <div class="collapse navbar-collapse row m-auto">

                        <ul class="flex-lg-column flex-row navbar-nav justify-content-between ">
                            <li class="list-group-item  rounded-0" style="  background-color: #201063;">
                                <a class="nav-link pl-0 text-nowrap" style=" font-weight:bold;color:white" asp-controller="Home" asp-action="Index"><img src="~/Icons/home.svg" alt="" /> <span class="d-none d-lg-inline"> Home</span></a>
                            </li>
                            <li class="list-group-item" style="  background-color: #201063">
                                <a class="nav-link pl-0" style=" font-weight:bold; color:white;" asp-controller="Beon" asp-action="listDevices"><img src="~/Icons/eye.svg" alt="" /> <span class="d-none d-lg-inline">Tracker list</span></a>
                            </li>
                            <li class="list-group-item" style="  background-color: #201063">
                                <a class="nav-link pl-0" style=" font-weight:bold;color:white " asp-controller="Beon" asp-action="Overview"><img src="~/Icons/earth.svg" alt="" /><span class="d-none d-lg-inline"> Overview</span></a>
                            </li>
                           
                        </ul>
                    </div>
                </nav>
            </aside>

            <main role="main" class="col p-0">
                @RenderBody()
            </main>

        </div>
    </div>
    <footer class="footer text-muted" style="  background-color: #201063">
        <div class="container">
            &copy; 2020 - BeOn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/65454f298e.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script type='text/javascript' src='https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js'></script>

    <script src="~/lib/chartjs/Chart.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>
